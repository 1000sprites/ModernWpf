<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFrameworks>netcoreapp3.0;net45</TargetFrameworks>
    <UseWPF>true</UseWPF>
    <ApplicationManifest>app.manifest</ApplicationManifest>
  </PropertyGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net45' ">
    <Reference Include="System.Windows.Presentation" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="BackgroundUI\**" />
    <Compile Remove="ControlPages\ProgressThreadedPage.xaml.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Assets\Contacts.txt" />
    <None Remove="Assets\mtns.csv" />
  </ItemGroup>

  <ItemGroup>
    <Page Remove="ControlPages\ProgressThreadedPage.xaml" />
  </ItemGroup>

  <ItemGroup>
    <None Include="BackgroundUI\**" />
    <None Include="ControlPages\ProgressThreadedPage.xaml" />
    <None Include="ControlPages\ProgressThreadedPage.xaml.cs" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ModernWpf.Controls\ModernWpf.Controls.csproj" />
    <ProjectReference Include="..\ModernWpf\ModernWpf.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Assets\Contacts.txt" />
    <Resource Include="Assets\mtns.csv" />
  </ItemGroup>

  <ItemGroup>
    <Page Update="Properties\DesignTimeResources.xaml">
      <Generator>MSBuild:Compile</Generator>
      <SubType>Designer</SubType>
      <ContainsDesignTimeResources>true</ContainsDesignTimeResources>
    </Page>
  </ItemGroup>

</Project>