<Page
    x:Class="ItemsRepeaterTestApp.Samples.ItemTemplateDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:local="clr-namespace:ItemsRepeaterTestApp.Samples"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Title="ItemTemplateDemo">
    <Page.Resources>
        <ui:RecyclePool x:Key="recyclePool" />
        <ui:StackLayout x:Key="stackLayout" />
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <StackPanel>
            <TextBlock>DataTemplate Sample:</TextBlock>
            <ui:ItemsRepeaterScrollHost
                Height="400"
                Width="150">
                <ScrollViewer>
                    <ui:ItemsRepeater
                        x:Name="repeater0"
                        ItemsSource="{Binding Data}"
                        Layout="{StaticResource stackLayout}">
                        <ui:ItemsRepeater.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" />
                            </DataTemplate>
                        </ui:ItemsRepeater.ItemTemplate>
                    </ui:ItemsRepeater>
                </ScrollViewer>
            </ui:ItemsRepeaterScrollHost>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBlock>DataTemplateSelector Sample:</TextBlock>
            <ui:ItemsRepeaterScrollHost
                Height="400"
                Width="150">
                <ScrollViewer>
                    <ui:ItemsRepeater
                        x:Name="repeater1"
                        ItemsSource="{Binding Data}"
                        Layout="{StaticResource stackLayout}">
                        <ui:ItemsRepeater.ItemTemplate>
                            <local:MySelector>
                                <local:MySelector.TemplateOdd>
                                    <DataTemplate>
                                        <TextBlock
                                            Text="{Binding}"
                                            Foreground="Red" />
                                    </DataTemplate>
                                </local:MySelector.TemplateOdd>
                                <local:MySelector.TemplateEven>
                                    <DataTemplate>
                                        <TextBlock
                                            Text="{Binding}"
                                            Foreground="Green" />
                                    </DataTemplate>
                                </local:MySelector.TemplateEven>
                            </local:MySelector>
                        </ui:ItemsRepeater.ItemTemplate>
                    </ui:ItemsRepeater>
                </ScrollViewer>
            </ui:ItemsRepeaterScrollHost>
        </StackPanel>
        <StackPanel Grid.Column="2">
            <TextBlock>ElementFactory Single Template Sample:</TextBlock>
            <ui:ItemsRepeaterScrollHost
                Height="400"
                Width="150">
                <ScrollViewer>
                    <ui:ItemsRepeater
                        x:Name="repeater2"
                        ItemsSource="{Binding Data}"
                        Layout="{StaticResource stackLayout}">
                        <ui:ItemsRepeater.ItemTemplate>
                            <ui:RecyclingElementFactory RecyclePool="{StaticResource recyclePool}">
                                <ui:RecyclingElementFactory.Templates>
                                    <DataTemplate x:Key="item">
                                        <TextBlock Text="{Binding}" />
                                    </DataTemplate>
                                </ui:RecyclingElementFactory.Templates>
                            </ui:RecyclingElementFactory>
                        </ui:ItemsRepeater.ItemTemplate>
                    </ui:ItemsRepeater>
                </ScrollViewer>
            </ui:ItemsRepeaterScrollHost>
        </StackPanel>
        <StackPanel Grid.Column="3">
            <TextBlock>ElementFactory Multiple Template Sample:</TextBlock>
            <ui:ItemsRepeaterScrollHost
                Height="400"
                Width="150">
                <ScrollViewer>
                    <ui:ItemsRepeater
                        x:Name="repeater3"
                        ItemsSource="{Binding Data}"
                        Layout="{StaticResource stackLayout}">
                        <ui:ItemsRepeater.ItemTemplate>
                            <ui:RecyclingElementFactory
                                RecyclePool="{StaticResource recyclePool}"
                                SelectTemplateKey="OnSelectTemplateKey">
                                <ui:RecyclingElementFactory.Templates>
                                    <DataTemplate x:Key="odd">
                                        <TextBlock
                                            Text="{Binding}"
                                            Foreground="Red" />
                                    </DataTemplate>
                                    <DataTemplate x:Key="even">
                                        <TextBlock
                                            Text="{Binding}"
                                            Foreground="Green" />
                                    </DataTemplate>
                                </ui:RecyclingElementFactory.Templates>
                            </ui:RecyclingElementFactory>
                        </ui:ItemsRepeater.ItemTemplate>
                    </ui:ItemsRepeater>
                </ScrollViewer>
            </ui:ItemsRepeaterScrollHost>
        </StackPanel>
    </Grid>
</Page>
